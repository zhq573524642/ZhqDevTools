<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:drawable="@drawable/bg_progress_background" />

    <item
        android:id="@android:id/secondaryProgress"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="#aaEFCC3F" />
            </shape>
        </scale>
    </item>

    <item
        android:id="@android:id/progress"
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp" />

                <solid android:color="#EFCC3F" />
            </shape>
        </scale>
    </item>
</layer-list>